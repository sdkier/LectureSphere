<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.LectureSphere" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize primary color for light blue widgets -->
        <item name="colorPrimary">#ADD8E6</item> <!-- Light Blue -->
        <item name="colorPrimaryVariant">#87CEFA</item> <!-- Sky Blue -->
        <item name="colorSecondary">#4682B4</item> <!-- Steel Blue -->

        <!-- Customize widget text color -->
        <item name="android:textColor">#000000</item> <!-- Black for light theme -->
        <item name="android:colorControlHighlight">#B0C4DE</item> <!-- Light Steel Blue -->

        <!-- Customize background color for the app -->
        <item name="android:colorBackground">#FFFFFF</item> <!-- White -->

        <!-- Button customization -->
        <item name="colorButtonNormal">#ADD8E6</item> <!-- Light Blue -->
        <item name="android:textColorPrimary">#000000</item> <!-- Button text color -->

        <!-- Ripple effect -->
        <item name="android:colorControlActivated">#87CEFA</item> <!-- Sky Blue -->

        <!-- Elevation overlays for light theme -->
        <item name="elevationOverlayColor">#B0C4DE</item> <!-- Light Steel Blue -->
    </style>

    <!-- Optional: Theme override for specific widget types -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#ADD8E6</item> <!-- Light Blue -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text on buttons -->
    </style>

</resources>

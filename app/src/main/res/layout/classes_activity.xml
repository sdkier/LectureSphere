<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_home"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Home" />

            <ImageButton
                android:id="@+id/btn_classes"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_classes"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Classes" />

            <ImageButton
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_chat"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Chat" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_settings"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Settings" />
        </LinearLayout>


        <!-- List of Classes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_class_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:text="Class 1"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_class_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:text="Class 2"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_class_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:text="Class 3"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_class_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:text="Class 4"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_class_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:text="Class 5"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_class_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class 6"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_class_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class 7"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_class_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:text="Class 8"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

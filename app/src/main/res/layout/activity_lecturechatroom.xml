<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lecture Chatroom"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Professor Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/professor_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user"
                android:contentDescription="Professor Image"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/professor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professor Smith"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/professor_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Science"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Chat Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/connection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected!"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Chat Category Dropdown -->
        <Spinner
            android:id="@+id/spinner_chat_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Chat Fragment Container -->
        <FrameLayout
            android:id="@+id/chat_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/chat_welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected to chat"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_margin="8dp" />

        </FrameLayout>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btn_raise_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raise Hand"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_share_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Notes"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_join_discussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Discussion"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
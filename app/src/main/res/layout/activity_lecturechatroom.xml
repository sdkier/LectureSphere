<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <ImageButton
        android:id="@+id/generate_notes_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_notes"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="Generate Notes"
        android:layout_marginStart="8dp"/>

    <!-- Modern Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Top Bar with Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:padding="8dp" />

            <TextView
                android:id="@+id/screen_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Lecture Chat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <TextView
                android:id="@+id/connection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:background="@drawable/status_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <!-- Professor Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/professor_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"
                android:contentDescription="Professor Image"
                android:background="@drawable/circle_background"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/professor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professor Smith"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:id="@+id/professor_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Science"
                    android:textSize="14sp"
                    android:textColor="#5F6368" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_chat_categories"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Chat Container - Now Much Larger -->
    <FrameLayout
        android:id="@+id/chat_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/chat_welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected to chat"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_margin="16dp" />
    </FrameLayout>

</LinearLayout>
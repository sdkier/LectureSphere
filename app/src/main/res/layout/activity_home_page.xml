<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_home"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Home" />

            <ImageButton
                android:id="@+id/btn_classes"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_classes"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Classes" />

            <ImageButton
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_chat"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Chat" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_settings"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Settings" />
        </LinearLayout>


        <!-- User Profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/user_profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="useremail@email.com"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Joined Classes -->

        <TextView
            android:id="@+id/joined_classes_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="Joined Classes"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border_background"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/class_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/ic_class_placeholder" />

                <ImageView
                    android:id="@+id/class_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/ic_class_placeholder" />

                <TextView
                    android:id="@+id/class_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class Name"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/professor_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Professor Name"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Today's Lectures -->
        <TextView
            android:id="@+id/todays_lectures_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Lectures"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lecture_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00 PM - Biology"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/lecture_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2:00 PM - History"
            android:layout_marginBottom="16dp" />

        <!-- Latest Discussions -->
        <TextView
            android:id="@+id/latest_discussions_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest Discussions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <ImageView
            android:id="@+id/class_image_3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/ic_class_placeholder" />
        <ImageView
            android:id="@+id/class_image_4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/ic_class_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border_background"
                android:padding="8dp">

                <TextView
                    android:id="@+id/discussion_text_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discussion Text"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Leave and Join Class -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_leave_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Leave Class" />

            <Button
                android:id="@+id/btn_join_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Join Class" />
        </LinearLayout>

        <!-- Enter Join Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_class_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., TopHat Code"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join a new class"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_home"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Home" />

            <ImageButton
                android:id="@+id/btn_classes"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_classes"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Classes" />

            <ImageButton
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_chat"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Chat" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1.1"
                android:src="@drawable/img_settings"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Settings" />
        </LinearLayout>

        <!-- User Profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="76dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/user_profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="useremail@email.com"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
        </LinearLayout>

        <!-- Enter Join Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_class_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="8-digit code for the class (ex: 12345678)"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Leave and Join Class -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="66dp">

            <Button
                android:id="@+id/btn_join_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Join a new class" />
        </LinearLayout>

        <!-- Paragraph -->
        <TextView
            android:id="@+id/welcome_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to LectureSphere! This is an app where you can join chatrooms during lectures and avoid disturbing the lecture while still being able to ask questions and collaborate with others. Click the Clipboard to check your class list. If you don't have any classes yet, submit a code to join a class, or make your own in the settings. We hope LectureSphere will enhance your learning experience and make going to lectures more engaging!"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_back"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Back to Settings" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Class"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="65dp" />
        </LinearLayout>

        <!-- Input Fields -->
        <EditText
            android:id="@+id/input_class_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Class Name"
            android:layout_marginBottom="24dp"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="16dp" />

        <EditText
            android:id="@+id/input_professor_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Professor Name"
            android:layout_marginBottom="24dp"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="16dp" />

        <EditText
            android:id="@+id/input_professor_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Professor Email"
            android:layout_marginBottom="24dp"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:padding="16dp" />

        <!-- Class Times Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Times"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Dynamic Time Input Section -->
        <LinearLayout
            android:id="@+id/dynamic_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Initial Day and Time Input Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Day Spinner -->
                <Spinner
                    android:id="@+id/spinner_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/days_of_week"
                    android:layout_marginEnd="8dp" />

                <!-- Start Time Field -->
                <EditText
                    android:id="@+id/input_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Start Time"
                    android:inputType="time"
                    android:layout_marginEnd="8dp" />

                <!-- End Time Field -->
                <EditText
                    android:id="@+id/input_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="End Time"
                    android:inputType="time" />
            </LinearLayout>
        </LinearLayout>

        <!-- Add and Remove Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btn_remove_time"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_minus"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Remove the last day and time"
                android:scaleType="fitCenter"
                android:layout_marginEnd="50dp"/>

            <ImageButton
                android:id="@+id/btn_add_time"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Add another day and time"
                android:scaleType="fitCenter"
                android:layout_marginStart="50dp"/>
        </LinearLayout>


        <!-- Create Class Button -->

        <Button
            android:id="@+id/btn_create_class"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Create Class"
            android:textSize="20sp"
            android:layout_marginTop="70dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
